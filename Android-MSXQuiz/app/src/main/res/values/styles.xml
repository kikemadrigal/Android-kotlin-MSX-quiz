<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--General styles on theme-->
    <style name="button_style_ligh">
        <item name="android:backgroundTint">@color/background_main</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="button_style_dark">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- main fragment -->
    <style name="main_activity_buttons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:padding">5dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="strokeColor">@color/white</item>
        <!--
            <item name="android:backgroundTint">@color/background_main</item>
            <item name="android:textColor">@color/white</item>
            -->
        </style>
       <!--Quiz fragment-->
    <style name="button_answers">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <!--
            <item name="android:backgroundTint">@color/background_main</item>
            <item name="android:textColor">@color/white</item>
            -->
        </style>
        <!--ranking fragment-->
    <style name="ranking_names">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textAlignment">center</item>
    <!--
    <item name="android:textColor">@color/white</item>
    <item name="android:text">@string/placeholder_name</item>
    -->
</style>
<!-- all fragments -->
    <style name="button_back" parent="main_activity_buttons">
        <item name="android:layout_marginStart">80dp</item>
        <item name="android:layout_marginEnd">80dp</item>
        <item name="android:layout_marginBottom">10dp</item>

        <!--<item name="android:backgroundTint">@color/background_main</item>
        <item name="android:textColor">@color/white</item>-->
    </style>





    <!-- ***** RANKING ACTIVITY ***** -->
    <style name="ranking_number">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color_darker</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginEnd">15dp</item>
    </style>



    <style name="ranking_points">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color_darker</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>

    </style>






</resources>